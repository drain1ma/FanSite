@model Fan_Website.Models.Post.NewPostModel    


<!DOCTYPE html>
<html>
<head>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="sectionHeader">
        <h1>New Post | @Model.ForumName</h1>
    </div>

    
    <form asp-action="AddPost" method="post" id="addPostForm">
        <div class="addPost">
            <div class="form-group">
                <label asp-for="Title"></label>
                <input asp-for="Title" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Content"></label>
                <textarea asp-for="Content" class="form-control"></textarea>
            </div>
            <button type="submit" id="submitPostBtn" class="btn btn-primary">Submit Post</button>
            <input asp-for="ForumId" type="hidden" />
        </div>
    </form>
    
</body>
</html>
