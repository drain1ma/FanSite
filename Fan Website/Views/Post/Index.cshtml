@model Fan_Website.Models.Post.PostIndexModel

<h1>@Model.Title</h1>

<div>
    Author: @Model.AuthorName (@Model.AuthorRating) 
    Created: @Model.Date
</div>

<div>
    @Model.PostContent
</div>

@if (Model.Replies.Any())
{
    foreach(var reply in Model.Replies)
                {
                    <div>
                        <div>
                            Reply Author: @reply.AuthorName
                            Reply Created: @reply.Date  
                        </div>
                        <div>
                            Reply: @reply.ReplyContent 
                        </div>
                    </div>
                }
}