@model List<Post>
@inject SignInManager<ApplicationUser> signInManager
@{
    ViewBag.Title = "Posts";

}

<!DOCTYPE html>
<html>
<body>

    @foreach (var post in Model)
    {
        <h1>@post.Title</h1><a>@post.UserName - @post.CreatedOn.ToString("d") @post.CreatedOn.ToString("t")</a><br />
        <a>@post.Content</a>

        @if (signInManager.IsSignedIn(User) && post.UserName == User.Identity.Name)
        {
<div class="d-flex">
    <a style="text-align: right" asp-controller="Post" asp-action="Delete"
       asp-route-id="@post.PostId"
       asp-route-slug="@post.Slug">Delete</a>
</div>
        }

    }
</body>
</html>