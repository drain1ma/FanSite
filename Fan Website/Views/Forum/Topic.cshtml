@model Fan_Website.Models.Forum.ForumTopicModel

<div class="container body-content">
    <div class="row sectionHeader">
        <span>@Model.Forum.Name Forum</span>
        @if (Context.User.Identity.IsAuthenticated)
            {
                <span id="headingBtn">
                    <a asp-controller="Post"
                       asp-action="Create"
                       asp-route-id="@Model.Forum.Id" class="btn btn-newPost">
                        Create Post
                    </a>
                </span>
            }

    </div>
</div>




<h1>Welcome to the @Model.Forum.Name Forum!</h1>

<span id="headingBtn"><a asp-controller="Post" asp-action="Create" asp-route-id="@Model.Forum.Id" class="btn btn-newPost">Create Post</a></span>

@if (Model.Posts.Any())
{
    <table>
        <tbody>
            @foreach (var post in Model.Posts)
            {
                <tr>
                    <td>
                        <a asp-controller="Post" asp-action="Index" asp-route-id="@post.Id">
                            @post.Title
                        </a>
                    </td>
                    <td>
                        @post.Author
                    </td>
                    <td>
                        @post.DatePosted
                    </td>
                    <td>
                        @post.RepliesCount
                    </td>
                </tr>
            }
        </tbody
    </table>

}
else
{
    <div class="noPosts">
        <h3>It looks like there are no @Model.Forum.Name posts yet</h3>
    </div>
}
