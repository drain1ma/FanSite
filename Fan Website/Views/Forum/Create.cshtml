@model Fan_Website.Models.Forum.AddForumModel

<!DOCTYPE html>
<html>
<head>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
            <div class="sectionHeader">
                Create New Forum
            </div>

            <form asp-action="AddForum" method="post" id="addPostForm" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title">Forum Title</label>
                    <input asp-for="Title" class="form-control" placeholder="Choose a Forum Title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description"></label>
                    <input asp-for="Description" rows="1" class="form-control" placeholder="Write a brief description here.">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <button type="submit" id="registerBtn" class="btn btn-primary">Create</button>
            </form>
</body>
</html>