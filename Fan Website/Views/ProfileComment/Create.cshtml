@model Fan_Website.Models.ProfileComment.ProfileCommentModel

<!DOCTYPE html>
<html>
<head>
    <link href="~/css/images.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">

    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>

</head>
<body>
    <div class="container body-content">
        <div class="row sectionHeader">
            <div class="sectionHeading" style="padding-bottom: 15px">
                Comment
                
            </div>
        </div>
        <div class="row" style="background-color: white">
            <div class="createPostSection">
                <div class="authorBlock">
                    You're submitting this comment as <span class="authorBlockName">@Model.AuthorName</span>
                </div>
                <form asp-action="AddComment" method="post" id="addPostForm">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="CommentContent">Post Content</label>
                        <textarea asp-for="CommentContent" rows="5" cols="180" class="form-control" placeholder="Write your comment here."></textarea>
                        <span asp-validation-for="CommentContent" class="text-danger"></span>
                    </div>
                    <button type="submit" id="registerBtn" class="btn btn-submitPost">Submit Reply</button>
                    <input asp-for="@Model.AuthorId" type="hidden" />
                    <input asp-for="@Model.UserId" type="hidden" />
                </form>
            </div>
        </div>
    </div>
</body>
</html>