@model Fan_Website.Models.Reply.PostReplyModel

<!DOCTYPE html>
<html>
<head>
    <link href="~/css/images.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">

    <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>

</head>
<body>
    <div class="container body-content">
        <div class="row sectionHeader">
            <div class="sectionHeading" style="padding-bottom: 15px">
                Reply | @Model.PostTitle
                <span id="headingBtn"><a asp-controller="Post" asp-action="Index" asp-route-id="@Model.PostId"><span class="material-icons" style="color: black; float: right">
                    arrow_back
            </span></a></span>
            </div>
        </div>
        <div class="row replyOriginalPost" style="border-bottom: thin solid">
            <h3>
                @Model.PostTitle
            </h3>
            <p>
                @Model.PostContent
            </p>
        </div>
        <div class="row" style="background-color: white">
            <div class="createPostSection">
                <div class="authorBlock">You're submitting this Reply as <span class="authorBlockName">@Model.AuthorName</span>
                </div>
                <form asp-action="AddReply" method="post" id="addPostForm">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ReplyContent">Post Content</label>
                        <textarea asp-for="ReplyContent" rows="5" cols="180" class="form-control" placeholder="Write your reply here."></textarea>
                        <span asp-validation-for="ReplyContent" class="text-danger"></span>
                    </div>
                    <button type="submit" id="registerBtn" class="btn btn-submitPost">Submit Reply</button>
                    <input asp-for="AuthorId" type="hidden" />
                    <input asp-for="PostId" type="hidden" />
                    <input asp-for="ForumName" type="hidden" />
                    <input asp-for="ForumId" type="hidden" />
                </form>
            </div>
        </div>
    </div>
</body>
</html>